{
    "language": "ts",
    "collection": "@nestjs/schematics",
    "sourceRoot": "./src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "../static/**",
                "outDir": "dist/static",
                "watchAssets": true
            },
            {
                "include": "../envs/**",
                "outDir": "dist/envs",
                "watchAssets": true
            }
        ]
    }
}
